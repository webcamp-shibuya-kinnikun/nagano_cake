<div class="row">
  <div class="col-xs-offset-1 col-xs-8">

    <h1>会員一覧</h1>
		<table class="table">
			<thead>
				<tr>
		  		<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>

			<tbody>
				<% @customers.each do |customer| %>
					<tr>
						<td><%= customer.id %></td>
						<td><%= link_to customer.last_name + customer.first_name, admins_customer_path(customer) %></td>
						<td><%= customer.email %></td>
						<td>
							<% if customer.is_valid == false %>
								有効
							<% else %>
								退会済
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
			<div><%= paginate @customers %></div>
		</table>

  </div>
</div>