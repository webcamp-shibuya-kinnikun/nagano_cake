<div class="row">
  <div class="col-xs-10">
    <h2>ジャンル編集</h2>
     <% if @genre.errors.any? %>
        <div style="color: red">
          <%= @genre.errors.count %>errors prohibited this obj from being saved:<br>
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    
      <%= form_with model:@genre, url: admins_genre_path, local: true do |f|  %>
        <h4>ジャンル名</h4>
        <%= f.text_field :name, class:"col-lg-7" %>
        <h4>有効フラグ</h4>
        <%= f.radio_button :is_valid, false %>有効
        <%= f.radio_button :is_valid, true %>無効
        <%= f.submit '変更を保存', class:"btn btn-primary col-lg-4" %>
      <% end %>

  </div>
</div>
