 <% if @genre.errors.any? %>
    <div style="color: red">
      <%= @genre.errors.count %>errors prohibited this obj from being saved:<br>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% @genres.each do |genre| %>
<%= genre.name %>
<%= genre.is_valid %>
<%= link_to "Edit", edit_admins_genre_path(genre), class: "btn btn-success"%>
<% end %>


<h1>ジャンル登録欄</h1>
      <!-- form_with部分 -->

      <%= form_with model:@genre, url:admins_genres_path, local:true do |f| %>

      <h4>ジャンル名</h4>
      <%= f.text_field :name, class:"col-lg-12" %>

      <h4>ジャンルフラグ</h4>
        <%= f.radio_button :is_valid, :false %>無効
        <%= f.radio_button :is_valid, :true  ,checked: true %>有効
      <%= f.submit 'ジャンル登録ボタン', class: "btn btn-primary col-lg-12" %>

    <% end %>