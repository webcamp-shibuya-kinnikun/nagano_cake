 <% if @genre.errors.any? %>
    <div style="color: red">
      <%= @genre.errors.count %>errors prohibited this obj from being saved:<br>
      <ul>
        <% @genre.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2>ジャンル登録欄</h2>
      <!-- form_with部分 -->

      <%= form_with model:@genre, url:admins_genres_path, local:true do |f| %>

      <h4>ジャンル名</h4>
      <%= f.text_field :name, class:"col-lg-12" %>

      <h4>ジャンルフラグ</h4>
        <%= f.radio_button :is_valid, :false %>有効
        <%= f.radio_button :is_valid, :true  ,checked: true %>無効
      <%= f.submit 'ジャンル登録ボタン', class: "btn btn-primary col-lg-12" %>

    <% end %>

<table class="table">
			<thead>
				<tr>
		  		<th>ジャンル</th>
					<th>状態</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><%= genre.name %></td>
						<td>
						  <% if genre.is_valid == false %>
						    有効
						  <% else %>
						  	無効
						  <% end %>
						</td>
						<td><%= link_to "Edit", edit_admins_genre_path(genre), class: "btn btn-success"%></td>
					</tr>
				<% end %>
			</tbody>
		</table>

