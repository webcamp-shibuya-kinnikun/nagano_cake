 <% if @item.errors.any? %>
    <div style="color: red">
      <%= @item.errors.count %>errors prohibited this obj from being saved:<br>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <%= form_with model:@item, url:admins_items_path, local:true do |f| %>
 <h4>ジャンル</h4>
     <% @genre.each do |genre| %>
        <%= f.radio_button :genre_id, genre.id %><%= genre.name %>
    <% end %>
    <h4>商品名</h4>
        <%= f.text_field :name, class:"col-lg-12" %>
    <h4>画像</h4>
        <%= f.attachment_field :image, class:"col-lg-12" %>
    <h4>商品紹介</h4>
        <%= f.text_area :explanation, class:"col-lg-12" %>
    <h4>商品値段</h4>
        <%= f.number_field :tax_out_price, class:"col-lg-12" %>
    <h4>在庫</h4>
        <%= f.radio_button :is_sale, false %>在庫なし
        <%= f.radio_button :is_sale, true, checked: true %>在庫あり
  <%= f.submit '新規保存', class:"btn btn-primary col-lg-12" %>
<% end %>