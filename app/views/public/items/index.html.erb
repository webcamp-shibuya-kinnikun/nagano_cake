<div calss="row">

  <%= render "search", genres: @genres %>

  <div class="col-xs-9">
    <h2>商品一覧(全<%= @items.total_count %>件)</h2>
    <% @items.each do |item| %>
      <div class="pull-left" style="padding:10px 10px 0 0">
        <%= link_to item_path(item) do %>
          <%= attachment_image_tag(item, :image, size: "150x100", fallback: "no_image.jpg") %>
        <% end %>
        <p><%= link_to item.name, item_path(item) %></p>
        <p>¥<%= item.tax_out_price.to_s(:delimited) %></p>
      </div>
    <% end %>
    <div><%= paginate @items %></div>
  </div>

</div>